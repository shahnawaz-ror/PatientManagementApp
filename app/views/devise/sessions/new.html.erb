<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card p-4 shadow-lg" style="width: 400px;">
    <div class="text-center">
      <%= image_tag("patient.jpeg", alt: "Logo", class: "mb-4", style: "width: 150px;") %>
    </div>
    <h2 class="text-center mb-4">Login</h2>

    <%= form_with scope: :user, url: new_user_session_path, local: true, class: "needs-validation" do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Forgot your password?", new_user_password_path, class: "text-decoration-none" %><br>
      <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
