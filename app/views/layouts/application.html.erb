<!DOCTYPE html>
<html>
<head>
  <title>PatientManagementApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>

<body>
  <nav class="navbar bg-body-tertiary">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
      <%= image_tag("patient.jpeg", alt: "Logo", class: "login-logo", style: "height: 40px; width: auto; margin-right: 8px;") %>
    </a>

    <!-- Notice and Alert -->
    <div>
      <p class="notice mb-0" style="color: green;"><%= notice %></p>
      <p class="alert mb-0" style="color: red;"><%= alert %></p>
    </div>

    <!-- User Info and Actions -->
    <div class="d-flex align-items-center">
      <% if user_signed_in? %>
        <p class="ms-3 mb-0">Welcome, <%= current_user.email %>!</p>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger ms-2" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-primary ms-2" %>
      <% end %>
    </div>
  </div>
</nav>



  <%= yield %>
</body>
</html>
