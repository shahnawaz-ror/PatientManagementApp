<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if @patients.prev_page %>
      <li class="page-item">
        <%= link_to 'Previous', url_for(page: @patients.prev_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
    <% end %>

    <% (1..@patients.total_pages).each do |page| %>
      <li class="page-item <%= 'active' if page == @patients.current_page %>">
        <%= link_to page, url_for(page: page), class: 'page-link' %>
      </li>
    <% end %>

    <% if @patients.next_page %>
      <li class="page-item">
        <%= link_to 'Next', url_for(page: @patients.next_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Next</span>
      </li>
    <% end %>
  </ul>
</nav>
