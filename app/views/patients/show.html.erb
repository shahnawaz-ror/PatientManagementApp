<p style="color: green"><%= notice %></p>

<div class="card p-4 mx-auto" style="max-width: 400px; border: 1px solid #ddd; border-radius: 10px;">
  <h4 class="text-center mb-4">Patient Details</h4>
  <div class="mb-3">
    <strong>Name:</strong>
    <p class="mb-1"><%= @patient.name %></p>
  </div>
  <div class="mb-3">
    <strong>Email:</strong>
    <p class="mb-1"><%= @patient.email %></p>
  </div>
  <div class="mb-3">
    <strong>Date of Birth:</strong>
    <p class="mb-1"><%= @patient.date_of_birth %></p>
  </div>
  <div class="mb-3">
    <strong>Next Appointment:</strong>
    <p class="mb-1"><%= @patient.next_appointment&.strftime('%Y-%m-%d') || 'N/A' %></p>
  </div>
  
  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Back to Patients", patients_path, class: "btn btn-secondary btn-sm" %>
    <div class="d-flex">
      <%= link_to "Edit", edit_patient_path(@patient), class: "btn btn-primary btn-sm me-2" %>
      <%= button_to "Destroy", @patient, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
